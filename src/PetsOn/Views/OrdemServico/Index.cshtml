@{
    ViewData["Title"] = "Agenda";
    Layout = (string)"_LayoutMenu";
}

@model List<PetsOn.Models.AgendaViewModel>;

<section class="container py-4 text-center">

    <div>

        <h3 class="p-4 mb-5 text-white bg-warning bg-opacity-75">Agenda</h3>

        <div class="alert alert-success d-flex align-items-center" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
            </svg>
            <div>
                Agende ou realize atendimentos aos clientes.
            </div>
        </div>
</section>

<section class="container py-4 text-center">

    <div>
        <div class="card background">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div id="calendar"></div>
                </div>
                <div class="panel-footer" align="center">
                    <button class="btn btn-default">Ver todos os eventos</button>
                </div>
            </div>
        </div>
    </div>

</section>

<section class="container py-4 text-center">

    <div class="row">
        <div class="col-md-6 mb-4">
            <button type="button" class="btn btn-block btn-warning btn-custom-cadastro" onclick="Agendar()"><span class='bx bxs-dog icon' aria-hidden="true"></span>&nbsp;Agendar</button>
        </div>
        <div class="col-md-6 mb-4">
            <button type="button" class="btn btn-block btn-warning btn-custom-cadastro" onclick="RealizarAtendimento()"><span class='bx bxs-dog icon' aria-hidden="true"></span>&nbsp;Realizar Atendimento</button>
        </div>
    </div>

</section>



