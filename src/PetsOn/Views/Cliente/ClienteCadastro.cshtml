@{
    ViewData["Title"] = "Cadastro de Clientes";
    Layout = (string)"_LayoutMenu";
}

@model PetsOn.Models.ClienteViewModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="container py-4 text-center">

        <h3 class="p-4 mb-5 text-white bg-warning bg-opacity-75">Cadastro de Clientes</h3>

        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
            </svg>
            <div>
                Antes de dar entrada em uma ordem de serviço, cadastre seu cliente.
            </div>
        </div>
    </section>

    <!-- Section: Design Block -->
    <section class="text-center text-lg-start">

        <!-- Jumbotron -->
        <div class="container py-4">
            <div class="row g-0 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card cascading-right">
                        <div class="card-body p-5 shadow-5 text-center">
                            <h2 class="fw-bold mb-5">Preencha o formulário</h2>

                            @Html.ValidationSummary(true)

                            <form asp-action="ClienteCadastro" asp-controller="Cliente" method="post" autocomplete="off">
                                <input type="hidden" asp-for="Codigo_Cliente" value="@Model.Codigo_Cliente" />

                                <!-- Nome e CPF do Cliente-->
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-floating">
                                            <input asp-for="Nome" type="text"  class="form-control" id="floatingNome" placeholder="Nome do Cliente">
                                            <label for="floatingNome">Nome do Cliente</label>
                                            <span asp-validation-for="Nome" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-floating">
                                            <input asp-for="Cpf" id="campoCpf" type="text"  onkeypress='return event.charCode >= 48 && event.charCode <= 57' class="form-control" id="floatingCPF" min="0" maxlength="14" placeholder="CPF">
                                            <label for="floatingCPF">CPF</label>
                                            <span asp-validation-for="Cpf" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Email input -->
                                <div class="col mb-4">
                                    <div class="form-floating">
                                        <input asp-for="Email" type="email"  class="form-control" id="floatingEmail" placeholder="E-mail">
                                        <label for="floatingEmail">E-mail</label>
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                    </div>
                                </div>

                                <!-- Celular do CLiente input -->
                                <div class="col mb-4">
                                    <div class="form-floating">
                                        <input asp-for="Celular" id="tel" type="text"  maxlength="15" pattern="\(\d{2}\)\s*\d{5}-\d{4}" onkeypress='return event.charCode >= 48 && event.charCode <= 57' class="form-control" id="floatingCelular" placeholder="Celular">
                                        <label for="floatingCelular">Celular</label>
                                        <span asp-validation-for="Celular" class="text-danger small"></span>
                                    </div>
                                </div>

                                <!-- Endereço do Cliente input -->
                                <div class="col mb-4">
                                    <div class="form-floating">
                                        <input asp-for="Endereco" type="text"  maxlength="100" class="form-control" id="floatingEndereco" placeholder="Endereço">
                                        <label for="floatingEndereco">Endereço</label>
                                        <span asp-validation-for="Endereco" class="text-danger small"></span>
                                    </div>
                                </div>

                                <!-- Submit button -->
                                <button type="submit" class="btn btn-block btn-warning btn-custom-cadastro"><span class='bx bx-user-plus icon' aria-hidden="true"></span>&nbsp;Cadastrar</button>
                                
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <img src="~/img/posse-responsavel-pet.jpg" class="w-100 rounded-4 shadow-4" alt="imagem cachorrinho" />
                </div>
            </div>
        </div>
    </section>
}
