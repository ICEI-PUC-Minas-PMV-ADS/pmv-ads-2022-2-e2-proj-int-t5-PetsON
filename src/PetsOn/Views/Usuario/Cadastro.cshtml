@{
    ViewData["Title"] = "Cadastre-se";
}

@model RegistroPetshopViewModel;


<section class="container py-4 text-center">

    <h3 class="fw-bold mb-5">Cadastro de Usuários</h3>


    <div class="alert alert-warning d-flex align-items-center" role="alert">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        <div>
            Para obter o acesso ao nosso sistema de gestão de Pet Shops, primeiramente precisamos realizar o seu cadastro.
        </div>
    </div>
</section>

<!-- Section: Design Block -->
<section class="text-center text-lg-start">


    <!-- Jumbotron -->
    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card cascading-right">
                    <div class="card-body p-5 shadow-5 text-center">
                        <h2 class="fw-bold mb-5">Preencha o formulário</h2>
                        <form asp-action="Cadastro" asp-controller="Usuario">
                            <!-- 2 column grid layout with text inputs for the first and last names -->
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-floating">
                                        <input asp-for="Nome" class="form-control" id="floatingNome" placeholder="Nome">
                                        <label for="floatingNome">Nome</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-floating">
                                        <input asp-for="Sobrenome" class="form-control" id="floatingSobrenome" placeholder="Sobrenome">
                                        <label for="floatingSobrenome">Sobrenome</label>
                                    </div>
                                </div>
                            </div>

                            <!-- Email input -->
                            <div class="col mb-4">
                                <div class="form-floating">
                                    <input asp-for="Email" class="form-control" id="floatingEmail" placeholder="E-mail">
                                    <label for="floatingEmail">E-mail</label>
                                </div>
                            </div>

                            <!-- Password input -->
                            <div class="col mb-4">
                                <div class="form-floating">
                                    <input asp-for="Senha" class="form-control" id="floatingSenha" placeholder="Senha" type="password">
                                    <label for="floatingSenha">Senha</label>
                                </div>
                            </div>

                            <!-- Nome da Empresa input -->
                            <div class="col mb-4">
                                <div class="form-floating">
                                    <input asp-for="NomeEmpresa" class="form-control" id="floatingEmpresa" placeholder="Nome da empresa">
                                    <label for="floatingEmpresa">Nome da empresa</label>
                                </div>
                            </div>

                            <!-- CNPJ e website da Empresa input -->
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-floating">
                                        <input asp-for="Cnpj" class="form-control" id="floatingCnpj" placeholder="CNPJ">
                                        <label for="floatingCnpj">CNPJ</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-floating">
                                        <input asp-for="WebSite" class="form-control" id="floatingWebSite" placeholder="Web Site">
                                        <label for="floatingWebSite">Web Site</label>
                                    </div>
                                </div>
                            </div>

                            <!-- Descricao da Empresa input -->
                            <div class="col mb-4">
                                <div class="form-floating">
                                    <textarea asp-for="Descricao" class="form-control" placeholder="Descrição da empresa" id="floatingDescricao" style="height: 100px"></textarea>
                                    <label for="floatingDescricao">Descrição da empresa</label>
                                </div>
                            </div>

                            <!-- Checkbox -->
                            <div class="form-check d-flex justify-content-left col mb-4">
                                <div class="form-floating">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="checkNotified" checked />
                                    <label class="form-check-label" for="checkNotified">Receber informativos</label>
                                </div>
                            </div>

                            <!-- Submit button -->
                            <a>&nbsp;&nbsp;</a>
                            <br>
                            @*<a class="nav-item" id="navLogin">*@
                                <button type="submit" class="btn btn-outline-warning">&nbsp;&nbsp;&nbsp;Cadastrar&nbsp;&nbsp;&nbsp;</button>
                            @*</a>*@
                            <br>
                            <a>&nbsp;&nbsp;</a>

                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="../img/dog-banho.jpg" class="w-100 rounded-4 shadow-4" alt="imagem cachorrinho" />
            </div>
        </div>
    </div>
</section>

